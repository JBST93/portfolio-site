<script>
  document.addEventListener('DOMContentLoaded', () => {
  const htmlElement = document.documentElement;
  const nightModeToggle = document.getElementById('night-mode-toggle');

  // Function to toggle dark mode
  function toggleDarkMode() {
    htmlElement.classList.toggle('dark');
    // Update localStorage to reflect user preference
    if (htmlElement.classList.contains('dark')) {
      localStorage.theme = 'dark';
    } else {
      localStorage.theme = 'light';
    }
  }

  // Check localStorage for theme preference
  if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    htmlElement.classList.add('dark');
  } else {
    htmlElement.classList.remove('dark');
  }

  // Add event listener to night mode toggle button
  if (nightModeToggle) {
    nightModeToggle.addEventListener('click', toggleDarkMode);
  }

  // Whenever the user explicitly chooses light mode
  function setLightMode() {
    localStorage.theme = 'light';
    htmlElement.classList.remove('dark');
  }

  // Whenever the user explicitly chooses dark mode
  function setDarkMode() {
    localStorage.theme = 'dark';
    htmlElement.classList.add('dark');
  }

  // Whenever the user explicitly chooses to respect the OS preference
  function respectOsPreference() {
    localStorage.removeItem('theme');
    // Remove the dark mode class if it was added before
    htmlElement.classList.remove('dark');
  }
});

</script>
